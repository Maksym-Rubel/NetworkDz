<Window x:Class="Text.SecondWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Text"
        mc:Ignorable="d"
        Title="SecondWindow" Height="250" Width="600">
    <DockPanel>
        <TextBlock DockPanel.Dock="Top" Margin="0,10,0,40" TextAlignment="Center" FontSize="40" FontWeight="Bold">Enter Nickname</TextBlock>
        <TextBox DockPanel.Dock="Top"  Name="ScdTxtBox" Height="30" Width="500"></TextBox>
        <Button DockPanel.Dock="Bottom" Click="Button_Click" Height="50" Width="200">Enter</Button>
    </DockPanel>
</Window>
